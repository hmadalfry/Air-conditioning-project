#include <IRremote.hpp>

#define IR_RECEIVE_PIN 14  // ุบูุฑ ุฑูู ุงูุจู ุญุณุจ ุชูุตููู ููุณุชูุจู ุงูุฅุดุงุฑุฉ (ูุซูุงู D14)

void setup() {
  Serial.begin(115200);
  while (!Serial) ;  // ุงูุชุธุงุฑ ุงูุงุชุตุงู ุจุงูุณูุฑูุงู (ุถุฑูุฑู ูุจุนุถ ุงูุฃุฌูุฒุฉ)
  Serial.println(F("IRrecvDumpV2 ุฌุงูุฒ! ุงูุชุธุฑ ุฅุดุงุฑุฉ ูู ุงูุฑูููุช..."));

  IrReceiver.begin(IR_RECEIVE_PIN, ENABLE_LED_FEEDBACK);
}

void loop() {
  if (IrReceiver.decode()) {
    IrReceiver.printIRResultShort(&Serial);  // ูุทุจุน ุงูุจุฑูุชูููู ูุงูููุฏ ุฅู ูุฌุฏ
    IrReceiver.printIRSendUsage(&Serial);    // ูุนุทูู ููุฏ ุงูุฅุฑุณุงู ูุจุงุดุฑุฉ

    if (IrReceiver.decodedIRData.protocol == UNKNOWN) {
      Serial.println(F("๐ก ุฅุดุงุฑุฉ ุบูุฑ ูุนุฑููุฉ (Raw data):"));
      IrReceiver.printIRResultRawFormatted(&Serial, true);
    }

    IrReceiver.resume(); // ุงูุงุณุชุนุฏุงุฏ ููุฅุดุงุฑุฉ
  }
}
